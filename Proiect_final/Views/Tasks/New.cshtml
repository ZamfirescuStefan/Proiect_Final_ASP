@model Proiect.Models.Task
@{
    ViewBag.Title = "Adaugare task";
}
<br />
<h3 style="margin-left:30%">Adaugare task</h3>
<br />
<div style="margin-left:30%">
    @using (Html.BeginForm(actionName: "New", controllerName: "Tasks"))
    {

        @Html.Label("TaskName", "Nume task")
        @Html.TextBox("TaskName", null, new { @class = "form-control" })
        @Html.ValidationMessage("TaskName", null, new { @class = "text-danger" })
        <br />

        @Html.Label("TaskDescription", "Descriere task")
        @Html.TextBox("TaskDescription", null, new { @class = "form-control" })
        @Html.ValidationMessage("TaskDescription", null, new { @class = "text-danger" })

        <br />

        @Html.Label("StartDate", "Data start")
        @Html.TextBox("StartDate", "", new { @class = "form-control" })
        @Html.ValidationMessage("StartDate", null, new { @class = "text-danger" })

        <br />

        @Html.Label("EndDate", "Data final")
        @Html.TextBox("EndDate", "", new { @class = "form-control" })
        @Html.ValidationMessage("EndDate", null, new { @class = "text-danger" })

        <br />

        @Html.HiddenFor(m => m.ProjectId)
        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m => m.WorkerId)
        <br />

        <button type="submit" class="btn btn-default" style="background-color:#006600; color:white">Adaugati taskul</button>
    }
</div>
<br />
<hr />
<a href="/Home/Index" class="btn btn-default" style="background-color:#1a1a1a; margin-left:30%"><span class="glyphicon glyphicon-home" style="color:white">&nbsp;</span><span style="color:white">Proiectele si echipele mele</span></a>
