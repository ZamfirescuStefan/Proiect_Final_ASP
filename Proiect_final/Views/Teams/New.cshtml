@model Proiect.Models.Team
@{
    ViewBag.Title = "Adaugare echipa";
}
<h3 style="margin-left:30%">Adaugare echipa</h3>
<br />
<br />
<div style="margin-left:30%">
    @using (Html.BeginForm(actionName: "New", controllerName: "Teams"))
    {
        @Html.Label("TeamName", "Numele echipei")
        @Html.TextBox("TeamName", null, new { @class = "form-control" })
        @Html.ValidationMessage("TeamName", null, new { @class = "text-danger" })
        @Html.Hidden("UserId", Model.UserId)
        @Html.Hidden("AuxUser", Model.AuxUser)
        <br />
        <button type="submit" class="btn btn-default" style="background-color:#006600; color:white">Adaugati echipa</button>
    }
</div>
<br />
<hr />
<br />
<a href="/Home/Index" class="btn btn-default" style="background-color:#1a1a1a; margin-left:30%"><span class="glyphicon glyphicon-home" style="color:white">&nbsp;</span><span style="color:white">Proiectele si echipele mele</span></a>
