@model Proiect.Models.Project
@{
    ViewBag.Title = "Adaugare proiect";
}

@Html.Partial("_Notification")

<br />
<br />
<h2 style="margin-left:30%">Adaugare proiect</h2>
<br />
<br />

<div style="margin-left:30%; margin-right:30%">
    @using (Html.BeginForm(actionName: "New", controllerName: "Projects"))
    {
        @Html.Label("ProjectName", "Nume proiect")
        @Html.TextBox("ProjectName", null, new { @class = "form-control" })
        @Html.ValidationMessage("ProjectName", null, new { @class = "text-danger" })
        <br />

        @Html.Label("ProjectDescription", "Descriere proiect")
        @Html.TextBox("ProjectDescription", null, new { @class = "form-control" })
        @Html.ValidationMessage("ProjectDescription", null, new { @class = "text-danger" })

        <br />
        @Html.Label("TeamId", "Alegeti echipa")
        @Html.DropDownListFor(m => m.TeamId, new SelectList(Model.Echipe, "Value", "Text"), "Selectati echipa", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TeamId, null, new { @class = "text-danger" })<br />
        <br />

        <button class="btn btn-default" type="submit" style="background-color:#006600; color:white">Adaugati proiectul</button>
    }
</div>
<br />
<br />
<hr />
<a href="/Home/Index" class="btn btn-default" style="background-color:#1a1a1a; margin-left:30%"><span class="glyphicon glyphicon-home" style="color:white">&nbsp;</span><span style="color:white">Proiectele si echipele mele</span></a>
